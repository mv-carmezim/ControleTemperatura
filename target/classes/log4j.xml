<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="main" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n"/>
        </layout>
    </appender>

    <appender name="simulatorAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${com.sun.aas.instanceRoot}/logs/simulator.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss,SSS} %5p [%-20c{1}] %m%n"/>
        </layout>
    </appender>

    <category name="br.com.caelum.vraptor">
        <priority value="INFO" />
        <appender-ref ref="main" />
    </category>

    <logger name="simulator">
        <level value="all" />
        <appender-ref ref="simulatorAppender" />
    </logger>

</log4j:configuration>